<?xml version="1.0" encoding="UTF-8"?>
<beans>


    <bean id="userService" class="com.vow.springframework.bean.UserService"/>

    <bean class="com.vow.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="com.vow.springframework.bean.UserServiceBeforeAdvice"/>

    <bean id="methodInterceptor" class="com.vow.springframework.aop.framework.adaper.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="com.vow.springframework.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* com.vow.springframework.bean.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>


</beans>